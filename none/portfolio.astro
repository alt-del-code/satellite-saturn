---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import AOS from 'aos';

const portfolioItems = await getCollection('portfolio-items');

// Group items by category
const groupedItems = portfolioItems.reduce((acc, item) => {
  const category = item.data.category;
  if (!acc[category]) {
    acc[category] = [];
  }
  acc[category].push(item);
  return acc;
}, {});
---

<Layout title="Our Portfolio - Krrish & Co">
  <main class="container mx-auto px-4 py-12">
    <h1 
      class="text-4xl md:text-5xl font-bold text-center mb-12"
      data-aos="fade-down"
    >
      Our Portfolio
    </h1>

    <div class="grid grid-cols-1 gap-8">
      {Object.entries(groupedItems).map(([category, items]) => (
        <section 
          class="mb-12"
          data-aos="fade-up"
        >
          <h2 class="text-3xl font-semibold mb-6 capitalize">
            {category.replace('-', ' ')}
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {items.map((item) => (
              <article 
                class="group relative overflow-hidden rounded-lg shadow-lg transition-all duration-300 hover:shadow-xl"
                data-aos="fade-up"
              >
                <a href={`/portfolio/${item.slug}`}>
                  {item.data.images && item.data.images[0] && (
                    <div class="aspect-w-16 aspect-h-9">
                      <Image
                        src={item.data.images[0]}
                        alt={item.data.title}
                        class="object-cover w-full h-full transition-transform duration-300 group-hover:scale-105"
                        width={600}
                        height={400}
                      />
                    </div>
                  )}
                  <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                    <div class="absolute bottom-0 p-6 text-white">
                      <h3 class="text-xl font-semibold mb-2">{item.data.title}</h3>
                      <p class="text-sm line-clamp-2">{item.data.description}</p>
                      <div class="mt-4 flex gap-2 flex-wrap">
                        {item.data.technologies?.slice(0, 3).map((tech) => (
                          <span class="inline-block px-2 py-1 text-xs bg-white/20 rounded-full">
                            {tech}
                          </span>
                        ))}
                      </div>
                    </div>
                  </div>
                </a>
              </article>
            ))}
          </div>
        </section>
      ))}
    </div>
  </main>
</Layout>

<script>
  import AOS from 'aos';
  import 'aos/dist/aos.css';

  AOS.init({
    duration: 800,
    once: true,
    offset: 100,
  });
</script> 
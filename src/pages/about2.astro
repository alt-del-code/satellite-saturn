---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import type { Value, Stat, TeamMember, Certification, AboutData } from '../types/content';

// Get the first about page entry
const aboutEntries = await getCollection('about');
const mainAbout = aboutEntries[0];

if (!mainAbout) {
  throw new Error('About page content not found');
}

const { Content } = await mainAbout.render();
const data = mainAbout.data as AboutData;
---

<Layout 
  title={data.meta.title} 
  description={data.meta.description}
>
  <main class="overflow-hidden">
    <!-- Hero Section -->
    <section class="relative py-20 bg-gradient-to-b from-primary-100 to-white dark:from-dark-bg-soft dark:to-dark-bg overflow-hidden">
      <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
      <div class="container mx-auto px-4 relative">
        <div class="max-w-4xl mx-auto text-center mb-16" data-aos="fade-up">
          <h1 class="text-5xl md:text-6xl font-bold text-primary-900 dark:text-white mb-6 leading-tight">
            {data.title}
          </h1>
          <p class="text-xl md:text-2xl text-primary-700 dark:text-gray-300 mb-8">
            {data.subtitle}
          </p>
          <p class="text-lg text-gray-600 dark:text-gray-400">
            {data.intro}
          </p>
        </div>

        <!-- Stats Section -->
        {data.stats && (
          <div class="grid grid-cols-2 md:grid-cols-4 gap-6 md:gap-8 mb-20" data-aos="fade-up" data-aos-delay="200">
            {data.stats.map((stat: Stat) => (
              <div class="bg-white/80 dark:bg-dark-surface-soft/90 p-6 rounded-2xl shadow-lg backdrop-blur-sm transform hover:scale-105 transition-all duration-300">
                <div class="text-4xl font-bold bg-gradient-to-r from-primary-600 to-primary-400 bg-clip-text text-transparent mb-2">
                  {stat.value}
                </div>
                <div class="text-lg font-semibold text-primary-800 dark:text-primary-300 mb-1">
                  {stat.label}
                </div>
                <p class="text-gray-600 dark:text-gray-400 text-sm">
                  {stat.description}
                </p>
              </div>
            ))}
          </div>
        )}
      </div>
    </section>

    <!-- Vision & Mission Section -->
    <section class="py-20 bg-white dark:bg-dark-bg-soft">
      <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-2 gap-12">
          <div class="relative" data-aos="fade-right">
            <div class="absolute inset-0 bg-primary-100 dark:bg-primary-900/20 rounded-3xl transform -rotate-3"></div>
            <div class="relative bg-white dark:bg-dark-surface p-8 rounded-2xl shadow-lg">
              <h2 class="text-3xl font-bold text-primary-900 dark:text-white mb-6">Our Vision</h2>
              <p class="text-gray-600 dark:text-gray-300 text-lg leading-relaxed">{data.vision}</p>
            </div>
          </div>
          <div class="relative" data-aos="fade-left">
            <div class="absolute inset-0 bg-primary-100 dark:bg-primary-900/20 rounded-3xl transform rotate-3"></div>
            <div class="relative bg-white dark:bg-dark-surface p-8 rounded-2xl shadow-lg">
              <h2 class="text-3xl font-bold text-primary-900 dark:text-white mb-6">Our Mission</h2>
              <p class="text-gray-600 dark:text-gray-300 text-lg leading-relaxed">{data.mission}</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Core Values Section -->
    {data.values && (
      <section class="py-20 bg-gradient-to-b from-white to-primary-50 dark:from-dark-bg dark:to-dark-bg-soft">
        <div class="container mx-auto px-4">
          <h2 class="text-4xl font-bold text-center text-primary-900 dark:text-white mb-16" data-aos="fade-up">
            Our Core Values
          </h2>
          <div class="grid md:grid-cols-3 gap-8">
            {data.values.map((value: Value, index: number) => (
              <div 
                class="relative group" 
                data-aos="fade-up" 
                data-aos-delay={index * 100}
              >
                <div class="absolute inset-0 bg-gradient-to-r from-primary-500 to-primary-600 rounded-2xl transform transition-transform group-hover:scale-105 opacity-0 group-hover:opacity-100"></div>
                <div class="relative bg-white dark:bg-dark-surface p-8 rounded-2xl shadow-lg group-hover:translate-y-[-5px] transition-all duration-300">
                  <div class="bg-primary-100 dark:bg-primary-900/30 p-4 rounded-xl w-16 h-16 flex items-center justify-center mb-6">
                    <Icon name={value.icon} class="w-8 h-8 text-primary-600 dark:text-primary-400" />
                  </div>
                  <h3 class="text-xl font-semibold text-primary-900 dark:text-white mb-4">{value.title}</h3>
                  <p class="text-gray-600 dark:text-gray-300">{value.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Team Section -->
    {data.team && (
      <section class="py-20 bg-white dark:bg-dark-bg-soft">
        <div class="container mx-auto px-4">
          <h2 class="text-4xl font-bold text-center text-primary-900 dark:text-white mb-16" data-aos="fade-up">
            Our Leadership Team
          </h2>
          <div class="grid md:grid-cols-3 gap-8">
            {data.team.map((member: TeamMember, index: number) => (
              <div 
                class="group"
                data-aos="fade-up"
                data-aos-delay={index * 100}
              >
                <div class="relative overflow-hidden rounded-2xl shadow-lg">
                  <div class="aspect-w-3 aspect-h-4">
                    <Image
                      src={member.image}
                      alt={member.name}
                      width={400}
                      height={500}
                      class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500"
                    />
                  </div>
                  <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent">
                    <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
                      <h3 class="text-xl font-semibold mb-2">{member.name}</h3>
                      <div class="text-primary-300 mb-3">{member.position}</div>
                      <p class="text-gray-300 text-sm opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                        {member.bio}
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Certifications Section -->
    {data.certifications && (
      <section class="py-20 bg-gradient-to-b from-primary-50 to-white dark:from-dark-bg dark:to-dark-bg-soft">
        <div class="container mx-auto px-4">
          <h2 class="text-4xl font-bold text-center text-primary-900 dark:text-white mb-16" data-aos="fade-up">
            Our Certifications
          </h2>
          <div class="grid md:grid-cols-4 gap-8">
            {data.certifications.map((cert: Certification, index: number) => (
              <div 
                class="bg-white dark:bg-dark-surface p-6 rounded-2xl shadow-lg transform hover:scale-105 transition-all duration-300"
                data-aos="fade-up"
                data-aos-delay={index * 100}
              >
                <div class="h-24 flex items-center justify-center mb-6">
                  <Image
                    src={cert.image}
                    alt={cert.name}
                    width={120}
                    height={120}
                    class="max-h-full w-auto object-contain"
                  />
                </div>
                <div class="text-center">
                  <h3 class="text-lg font-semibold text-primary-900 dark:text-white mb-2">{cert.name}</h3>
                  <div class="text-gray-600 dark:text-gray-400 text-sm">
                    <div class="mb-1">{cert.issuer}</div>
                    <div>{cert.year}</div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Content Section -->
    <section class="py-20 bg-white dark:bg-dark-bg-soft">
      <div class="container mx-auto px-4">
        <div class="prose prose-lg dark:prose-invert mx-auto">
          <Content />
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .bg-grid-pattern {
    background-image: 
      linear-gradient(to right, rgba(0,0,0,0.1) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(0,0,0,0.1) 1px, transparent 1px);
    background-size: 4rem 4rem;
  }

  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
    100% { transform: translateY(0px); }
  }

  .prose :global(img) {
    @apply rounded-xl shadow-lg;
  }

  .prose :global(a) {
    @apply text-primary-600 dark:text-primary-400 no-underline hover:text-primary-700 dark:hover:text-primary-300 transition-colors;
  }
</style> 
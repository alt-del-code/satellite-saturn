---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import type { BlogPost } from '../types/blog';

const posts = await getCollection('blog-posts') as BlogPost[]; // Corrected collection name
---

<Layout title="Blog | KrrishCo">
    <main class="container mx-auto px-4 py-12">
        <h1 class="text-4xl font-bold text-center mb-12" data-aos="fade-up">Our Blog</h1>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {posts.map((post: BlogPost) => (
                <article 
                    class="bg-white rounded-lg shadow-lg overflow-hidden transition-transform transform hover:scale-105 hover:shadow-xl"
                    data-aos="fade-up"
                    data-aos-delay="100"
                >
                    {post.data.featuredImage && ( // Changed from post.data.image to post.data.featuredImage
                        <div class="relative">
                            <img 
                                src={post.data.featuredImage} 
                                alt={post.data.title}
                                class="w-full h-48 object-cover transition-transform duration-300 hover:scale-110"
                                loading="lazy"
                            />
                            <div class="absolute inset-0 bg-black bg-opacity-30 transition-opacity opacity-0 hover:opacity-50"></div>
                        </div>
                    )}
                    <div class="p-6">
                        <h2 class="text-xl font-semibold mb-2 hover:underline">
                            <a href={`/blog/${post.slug}`} class="hover:text-blue-600 transition-colors">
                                {post.data.title}
                            </a>
                        </h2>
                        <p class="text-gray-700 mb-4">{post.data.excerpt}</p>
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-500">
                                {new Date(post.data.publishDate).toLocaleDateString()}
                            </span>
                            <a 
                                href={`/blog/${post.slug}`}
                                class="text-blue-600 hover:text-blue-800 font-medium"
                                aria-label={`Read more about ${post.data.title}`}
                            >
                                Read More →
                            </a>
                        </div>
                    </div>
                </article>
            ))}
        </div>

        {/* Pagination Section (if needed) */}
        <div class="flex justify-between mt-8">
            <a href="/blog/page/2" class="text-blue-600 hover:text-blue-800 font-medium">Next Page →</a>
        </div>
    </main>
</Layout>

---
import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import Image from '@/components/Image.astro';

const portfolioItems = await getCollection('portfolio-items');

// Add this helper function at the top of the frontmatter
const resolveImage = (imagePath: string) => {
  try {
    return new URL(imagePath, import.meta.url).href;
  } catch (e) {
    return imagePath;
  }
};

// Group items by category
const itemsByCategory = portfolioItems.reduce((acc, item) => {
  const category = item.data.category;
  if (!acc[category]) {
    acc[category] = [];
  }
  acc[category].push(item);
  return acc;
}, {} as Record<string, CollectionEntry<'portfolio-items'>[]>);

// Sort categories for consistent display
const sortedCategories = Object.keys(itemsByCategory).sort();
---

<Layout title="Portfolio | Krrish & Co">
  <main class="container mx-auto px-4 py-12">
    <h1 class="text-4xl md:text-5xl font-bold mb-8 text-center">Our Portfolio</h1>
    <p class="text-xl text-gray-600 dark:text-gray-300 mb-12 text-center max-w-3xl mx-auto">
      Explore our diverse range of industrial solutions across fabrication, material supply, hardware solutions, and automation projects.
    </p>

    {sortedCategories.map((category) => (
      <section class="mb-16" data-aos="fade-up">
        <h2 class="text-3xl font-bold mb-8 capitalize">
          {category.replace('-', ' ')}
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {itemsByCategory[category].map((item) => (
            <a 
              href={`/portfolio/${item.slug}`}
              class="group block"
              data-aos="fade-up"
            >
              <article class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden transition-transform duration-300 group-hover:transform group-hover:scale-105">
                {item.data.images?.[0] && (
                  <div class="relative h-48 overflow-hidden">
                    <Image
                      src={resolveImage(item.data.images[0])}
                      alt={item.data.title}
                      className="w-full h-full object-cover"
                      width={800}
                      height={600}
                    />
                  </div>
                )}
                <div class="p-6">
                  <h3 class="text-xl font-semibold mb-2 group-hover:text-primary-600 dark:group-hover:text-primary-400">
                    {item.data.title}
                  </h3>
                  <p class="text-gray-600 dark:text-gray-300 text-sm mb-4">
                    {item.data.description}
                  </p>
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-gray-500 dark:text-gray-400">
                      {item.data.clientName}
                    </span>
                    <span class="text-primary-600 dark:text-primary-400 font-medium">
                      View Project â†’
                    </span>
                  </div>
                </div>
              </article>
            </a>
          ))}
        </div>
      </section>
    ))}
  </main>
</Layout>
---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

const aboutContent = await getCollection('about');
const about = aboutContent[0]; // Since we only have one about page
---

<Layout 
  title={about.data.meta.title} 
  description={about.data.meta.description}
>
  <main class="container mx-auto px-4 py-16">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl md:text-5xl font-bold mb-8" data-aos="fade-up">
        {about.data.title}
      </h1>
      
      {about.data.image && (
        <div class="mb-12" data-aos="fade-up" data-aos-delay="100">
          <Image
            src={about.data.image}
            alt={about.data.title}
            class="w-full h-auto rounded-lg shadow-lg"
          />
        </div>
      )}

      <div class="prose prose-lg max-w-none" data-aos="fade-up" data-aos-delay="200">
        <div class="text-xl text-gray-600 mb-8">
          {about.data.intro}
        </div>
        
        <div class="mt-8">
          {about.render()}
        </div>
      </div>
    </div>
  </main>
</Layout> 